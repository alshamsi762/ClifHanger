//var THREE = require('three');
var assert = require('assert');
var THREE = require('../gameStageGlobal.js')

test('should have a defined BasicShadowMap constant', () => {
  expect(THREE.screen.shadowMap.autoUpdate).toBe(true);
});

// describe('Test inititializing The THREE objects declared in gameStageGlobal', function() {
//   it('should have a defined BasicShadowMap constant', function() {
//     assert.ok(THREE.screen.shadowMap.autoUpdate);
//   }),
  // it('should have a defined draw constant', function() {
  //   assert.ok(THREE.draw.);
  // }),
  it('should have a defined cam constant', function() {
    assert.ok(THREE.cam.isPerspectiveCamera);
  }),

  it('should have a defined controls constant', function() {
    assert.ok(THREE.controls.enabled);
  }),

  it('should have a defined scene constant', function() {
    assert.ok(THREE.scene.autoUpdate);
  }),

  it('should have a defined axes constant', function() {
    assert.equal(THREE.axes.size,5);
  }),

  it('should have a defined ambLight constant', function() {
    assert.ok(THREE.ambLight.isAmbientLight);
  }),

  it('should have a defined pointLight constant', function() {
    assert.ok(THREE.pointLight.isPointLight);
  }),

  it('should have a defined lambert constant', function() {
    assert.ok(THREE.lambert.isMeshLambertMaterial);
  }),

  it('should have a defined plateGeom constant', function() {
    assert.ok(THREE.plateGeom.geometry.parameters.width == 7);
  }),

  it('should have a defined plate constant', function() {
    assert.ok(THREE.plate.isMesh);
  })
})
